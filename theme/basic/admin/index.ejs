<% defineMainflex(false); %>
<% defineTitle("테마 설정"); %>

<h1 class="admin-title">테마 설정</h1>
<ol class="breadcrumb mb-4">
	<li class="breadcrumb-item active">Theme settings</li>
</ol>

<form action="#" method="post">
    <div class="mb-3 row">
        <label for="mode" class="col-sm-2 col-form-label">모드</label>
        <div class="col-sm-10">
            <select class="form-select" id="mode" name="mode">
                <option value="light"<%= req.siteInfo.themeConfig.mode === 'light' ? "selected" : "" %>>Light</option>
                <option value="dark"<%= req.siteInfo.themeConfig.mode === 'dark' ? "selected" : "" %>>Dark</option>
            </select>
        </div>
    </div>
    
    <input class="btn btn-primary" type="submit" value="설정">
</form>