<% defineTitle('설정'); %>
<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto">
	<span class="flex items-center mb-6 text-2xl font-semibold">
		설정
	</span>
	<% if(req.session.errMsg){ %>
		<div class="ms-3 me-3 mt-1 mb-1 card text-bg-danger text-center d-flex justify-center">
			<div class="card-body">
				<p class="card-text"><%= req.session.errMsg %></p>
			</div>
		</div>
	<% req.removeErrMsg(); %>
	<% } %>
	<div class="w-full md:mt-0 sm:max-w-md xl:p-0">
		<div class="p-6 space-y-4 md:space-y-6 sm:p-8">
			<form class="space-y-4 md:space-y-6" action="<%= pageUrls.api_settings %>" method="post">
				<div class="form-floating">
					<input type="text" name="username" id="username" 
						class="border border-gray-300 sm:text-sm rounded-lg focus:ring-activeColor-600 focus:border-activeColor-600 block w-full p-2.5 form-control" 
						placeholder="Username" 
						required="" 
						value="<%= req.userName %>"
					/>
					<label for="username" class="block mb-2 font-medium">Username</label>
				</div>
				<div class="form-floating d-flex">
					<input type="password" name="password" id="password" 
						class="border border-gray-300 sm:text-sm rounded-lg focus:ring-activeColor-600 focus:border-activeColor-600 block w-full p-2.5 form-control" 
						placeholder="Password" 
						autocomplete="on"
					/>
					<label for="password" class="block mb-2 font-medium">Password</label>
				</div>
				<!--<div class="form-floating d-flex">
					<input type="email" name="email" id="email" 
						class="border border-gray-300 sm:text-sm rounded-lg focus:ring-activeColor-600 focus:border-activeColor-600 block w-full p-2.5 form-control" 
						placeholder="Email" 
						required="" 
						autocomplete="on"
						value="<%= req.userEmail %>"
					/>
					<label for="email" class="block mb-2 font-medium">Email</label>
				</div>-->
				<button type="submit" class="w-full text-white btn btn-primary focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center">설정</button>
			</form>
		</div>
	</div>
</div>